{
  "name": "apetools",
  "description": "ApeTools is a simple web app to produce image asset bundles for a variety of app platforms",
  "version": "2.0.0",
  "author": "apps@webprofusion.com",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean && npm run compile",
    "build:parts": "npm run sass && npm run compile",
    "ci:teamcity": "karma --env=tc start karma.coverage.js && npm run coverage:remap",
    "ci:jenkins": "karma --env=jk start karma.coverage.js && npm run coverage:remap",
    "clean": "rimraf dist && rimraf coverage",
    "compile": "webpack --config config/webpack.config.prod.js",
    "coverage": "npm run coverage:run && npm run coverage:remap && npm run coverage:open",
    "coverage:open": "opn coverage/html-ts/index.html",
    "coverage:remap": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html-ts -t html",
    "coverage:run": "cross-env NODE_ENV=development karma start karma.coverage.js",
    "dev": "webpack-dev-server --hot --inline",
    "lint": "tslint src/**/*.ts",
    "serve": "http-server dist/ -o",
    "test": "cross-env NODE_ENV=development karma start karma.unit.js",
    "test:debug": "cross-env NODE_ENV=development karma start karma.debug.js",
    "test:watch": "cross-env NODE_ENV=development karma start karma.unit.js --singleRun=false --auto-watch"
  },
  "dependencies": {
    "axios": "~0.16.2",
    "file-saver": "1.3.3",
    "jszip": "3.1.5",
    "pica": "^4.1.0",
    "vue": "2.5.9",
    "vue-class-component": "6.1.1",
    "vue-property-decorator": "6.0.0",
    "vue-radial-progress": "0.2.10",
    "vue-router": "3.0.1"
  },
  "devDependencies": {
    "@types/file-saver": "1.3.0",
    "@types/jszip": "3.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.5.9",
    "@types/sinon": "^2.3.7",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "3.4.1",
    "chai": "^4.1.2",
    "compression-webpack-plugin": "^1.1.6",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~5.0.5",
    "css-loader": "^0.28.9",
    "es6-promise": "~4.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "~0.10.0",
    "istanbul-instrumenter-loader": "~3.0.0",
    "json-loader": "~0.5.7",
    "karma": "^1.7.1",
    "karma-chai": "~0.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage": "~1.1.1",
    "karma-junit-reporter": "~1.2.0",
    "karma-mocha": "~1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon": "~1.0.5",
    "karma-source-map-support": "~1.2.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-teamcity-reporter": "^1.1.0",
    "karma-webpack": "^2.0.9",
    "lodash.merge": "^4.6.1",
    "minimist": "~1.2.0",
    "mocha": "^3.5.3",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.3",
    "opn-cli": "~3.1.0",
    "postcss-loader": "^2.1.0",
    "purify-css": "^1.2.6",
    "purifycss-webpack": "^0.7.0",
    "raw-loader": "~0.5.1",
    "remap-istanbul": "^0.9.6",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "sinon": "~3.2.1",
    "style-loader": "^0.18.2",
    "tslint": "~5.6.0",
    "tslint-loader": "~3.5.3",
    "typescript": "~2.5.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.10.0",
    "webpack-dev-server": "~2.7.1"
  }
}
